<div class="container px-5 px-sm-0">
    <div class="row">



        <div class="col-md-3">
            <h2>User info</h2>
            <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
                <tbody>
                    <tr>
                        <th>name</th>
                        <th> <%= @user.name %> </th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th> <%= @user.introduction %> </th>
                    </tr>
                </tbody>
            </table>

            <div class="row">
            <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
                <i class="fas fa-user-cog"></i>
            <% end %>
            </div>

            <h2 class="mt-3">New book</h2>

            <%= form_with model: Book.new, local: true, url:books_path do |f| %>
                <div class="form-group">
                    <%= f.label :title %>
                    <%= f.text_field :title, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :body %>
                    <%= f.text_field :body, class: 'form-control' %>
                </div>

                <%= f.submit 'Create Book', class: 'btn btn-success' %>
            <% end %>
        </div>



        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th><br></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>


                <tbody>
                    <% @user.books.each do |book| %>
                        <tr>
                            <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user.id) %></td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                            <td>
                                <% if book.favorited_by?(current_user) %>
                                    <p>
                                    <%= link_to book_favorites_path(book), method: :delete, style: "color: #ff6347" do %>
                                        <i class="fas fa-heart"></i><%= book.favorites.count %>
                                    <% end %>
                                    </p>
                                    <% else %>
                                    <p>
                                    <%= link_to book_favorites_path(book), method: :post do %>
                                        <i class="fas fa-heart"></i><%= book.favorites.count %>
                                    <% end %>
                                    </p>
                                <% end %>
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>



    </div>
</div>
