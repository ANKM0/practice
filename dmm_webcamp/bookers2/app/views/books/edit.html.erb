<div class="container px-5 px-sm-0">
    <div class="row">


        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing Book</h1>

                <%= render 'layouts/error_messages', model: @book %>

            <%= form_with model: @book do |f| %>
                <div class="form-group">
                    <%= f.label :Title %>
                    <%= f.text_field :title, class: 'form-control', value:@book.title %>
                </div>
                <div class="form-group">
                    <%= f.label :Opinion %>
                    <%= f.text_field :body, class: 'form-control', value:@book.body %>
                </div>

                <div class="form-group">
                    <%= f.submit 'Update Book', class: 'btn btn-success' %>
                </div>
            <% end %>

            <%= link_to "Show", book_path(@book) %>
            |
            <%= link_to "Back", books_path %>
        </div>

    </div>
</div>
